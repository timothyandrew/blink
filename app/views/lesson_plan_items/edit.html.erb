<% breadcrumb :edit_lesson_plan_item, @lesson_plan, lesson_plan_item %>

<h1>Editing a Lesson Plan Item</h1>

<div class="student-actions pull-right">
  <%= link_to "Delete", lesson_plan_item_path(@lesson_plan, @lesson_plan_item), method: :delete, class: "btn btn-danger",
    data: {confirm: "Are you sure? This will destroy this lesson plan item and all its contents. There is no undo!"} %>
</div>

<h2 class="new-goal-subheader">
  <span><%= lesson_plan_item.range %></span> |  <span><%= @lesson_plan.date.strftime("%-d %B %Y") %></span>
</h2>

<%= render "form" %>
